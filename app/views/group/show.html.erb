
<% if not @group.nil? %>

<div class="col-sm-12">
  <div class="card-header link-to-text-color" style="background-color: #2c3e50; width:110%">
    <h2><%= @group.year.to_s + "-" + @group.term + "-"+ @group.name + "-Section " + @group.section.to_s%>
    <td><%= link_to 'Quit the group', {:controller => "group",
                                       :action => "destroy",
                                       :id => @group.id}, method: 'post', class: "btn btn-primary btn-sm",
                                       data: {confirm: 'Doing so will delete every homework you have under this group. Are you sure?'} %></td></h2>
  </div>
</div>

<style>
.card-inverse {
  height: 200px;
  width: 300px;
  border-radius: 25px;
  padding: 25px;
}
.card-inverse:hover {
  color: black ;
  background-color: rgb(255, 153, 153);
}</style>

<div id = "hw_result" >
  <table style="border-collapse: separate; border-spacing: 20px 1px;">
    <% @table.each_with_index do |hw, i| %>
      <tr>
        <% hw.each_with_index do |h, j| %>
        <td>
          <%= link_to homeworkshow_path(h) do %>
          <div class="card card-inverse card-<%= @date_infos[i][j][0]%> ">
          <div class="card-deck">
              <!-- <blockquote class="card-blockquote "> -->
                <div class="col-sm-4 link-to-text-color">
                  <h1 style="text-align: center; "> <%= @date_infos[i][j][1].to_s %></h1>
                  <div style="padding: 0px; margin: 0px;">
                  <h4 > <%= @date_infos[i][j][2]%></h4>
                  </div>
                </div>
                <div class="col-sm-8 link-to-text-color">
                  <h6>
                    <p>Name: <%= h.name%></p>
                    <p>Class:
                      <% if not h.group_id.nil? %>
                        <%= Group.find_by_id(h.group_id).name %>
                      <% end%>
                    </p>
                    <p>Description: <%= h.description%></p>
                  </h6>
                </div>
              <!-- </blockquote> -->
          </div>
          </div>
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>
<% end %>
