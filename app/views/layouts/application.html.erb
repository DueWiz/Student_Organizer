<!DOCTYPE html>
<html>
  <head>
    <title>DueWiz</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <% if user_signed_in? %>
    <%= render "layouts/new_latte" %>
    <%= render "layouts/new_group" %>
    <%= render "layouts/new_hw" %>
    <% end %>
    <%= render "layouts/nav_top" %>
    <div class="container-fluid">
      <% if user_signed_in? %>
      <%= render "layouts/nav_left" %>
      <div class="col-md-9">
      <% else %>
      <div class="col-md-12">
      <% end %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= yield %>
      </div>
    </div>
  </body>
</html>
